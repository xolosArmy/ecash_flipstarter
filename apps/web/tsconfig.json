{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "allowJs": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "jest"]
